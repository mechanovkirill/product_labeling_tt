<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_labeling_act_view_form" model="ir.ui.view">
            <field name="name">product_labeling_act.form</field>
            <field name="model">product_labeling.act</field>
            <field name="arch" type="xml">
                <form string="product_labeling.act">
                    <sheet>
                        <header>
                             <field name="state" widget="statusbar" statusbar_visible="draft, confirmed, canceled"/>
                        </header>
                        <group>
                            <group>
                                <field name="date"/>
                                <field name="name"/>
                                <field name="type" readonly="1"/>
                                <field name="pl_product_id" invisible="type != 'purchase'"/>
                                <field name="pl_labeled_product_id" invisible="type == 'purchase'"/>
                                <field name="quantity"/>
                                <field name="current_pl_warehouse_id" invisible="type == 'purchase'"/>
                                <field name="to_pl_warehouse_id"/>
                            </group>
                            <notebook>
                                <page name="Затраты/Приходы">
                                    <field name="pl_move_ids"/>
                                </page>
                            </notebook>
                        </group>
                    </sheet>
                     <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </div>
                </form>
            </field>
        </record>

        <record id="product_labeling_act_view_tree" model="ir.ui.view">
            <field name="name">product_labeling_act.tree</field>
            <field name="model">product_labeling.act</field>
            <field name="arch" type="xml">
                <tree string="act">
                    <field name="name"/>
                    <field name="type"/>
                    <field name="pl_labeled_product_id"/>
                    <field name="quantity"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="action_open_product_labeling_act" model="ir.actions.act_window">
            <field name="name">Acts</field>
            <field name="res_model">product_labeling.act</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
