<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_labeling_act_view_form" model="ir.ui.view">
            <field name="name">product_labeling_act.form</field>
            <field name="model">product_labeling.act</field>
            <field name="arch" type="xml">
                <form string="product_labeling.act">
                    <sheet>
                        <header>
                             <button name="action_confirm_act" type="object" string="Confirm" class="oe_highlight" invisible="state != 'draft'"/>
                             <button name="action_reset_act_to_draft" type="object" string="Confirm" class="oe_highlight" invisible="state == 'draft'"/>
                             <field name="state" widget="statusbar" statusbar_visible="draft, confirmed, canceled"/>
                        </header>
                        <group>
                            <group>
                                <field name="operation_type" invisible="1"/>
                                <field name="date" readonly="state == 'confirmed'"/>
                                <field name="name" readonly="state == 'confirmed'"/>
                                <field name="pl_operation_type_id" readonly="state == 'confirmed'"/>
                                <field name="pl_product_id" invisible="operation_type != 'Покупка' or state != 'draft'" readonly="state == 'confirmed'"/>
                                <field name="pl_labeled_product_id" invisible="operation_type == 'Покупка' and state == 'draft'" readonly="state == 'confirmed'"/>
                                <field name="quantity" readonly="state == 'confirmed'"/>
                                <field name="current_pl_warehouse_id" string="Текущий склад" invisible="operation_type == 'Покупка'" readonly="state == 'confirmed'"/>
                                <field name="to_pl_warehouse_id" readonly="state == 'confirmed'"/>
                            </group>

                            <notebook>
                                <page name="Приходы/Расходы">
                                    <field name="pl_move_ids" readonly="state == 'confirmed'">
                                        <tree editable="bottom" string="Приходы/Расходы">
<!--                                            <button name="action_open_pl_move" type="object" string="Open" class="oe_highlight"/>-->
                                            <field name="name"/>
                                            <field name="debit"/>
                                            <field name="credit"/>
                                        </tree>
                                    </field>
                                </page>
                            </notebook>
                        </group>
                    </sheet>
                     <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </div>
                </form>
            </field>
        </record>

        <record id="product_labeling_act_view_tree" model="ir.ui.view">
            <field name="name">product_labeling_act.tree</field>
            <field name="model">product_labeling.act</field>
            <field name="arch" type="xml">
                <tree string="act">
                    <field name="name"/>
                    <field name="pl_labeled_product_id"/>
                    <field name="pl_operation_type_id"/>
                    <field name="quantity"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="action_open_product_labeling_act" model="ir.actions.act_window">
            <field name="name">Acts</field>
            <field name="res_model">product_labeling.act</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
